{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node16", // required to import any of the @typescript-eslint modules
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./lib",
    "skipLibCheck": true,
    "outDir": "dist",
    "module": "Node16", // required to import any of the @typescript-eslint modules
    "target": "es6",
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["**/*.ts"]
}